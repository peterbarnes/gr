<div class="small-12 medium-12 large-12 columns">
	<div class="container">
		<div class="header">
			<h3><i class="fa fa-group"></i> Follow us</h3>
		</div>
		<div class="links">
			<ul>
				<li><a href="https://www.facebook.com" class="button radius" target="blank"><i class="fa fa-facebook"></i></a></li>
				<li><a href="#" class="button disabled radius"><i class="fa fa-twitter"></i></a></li>
				<li><a href="#" class="button disabled radius"><i class=" fa fa-tumblr"></i></a></li>
			</ul>
		</div>
	</div>
</div>
<div class="small-12 medium-12 large-12 columns">
	<div class="container">
		<div class="header">
			<h4><i class="fa fa-comment"></i> Questions, comments, or concerns?</h4>
		</div>
		<div class="email">
			<%= form_tag("/send", method: "post") do %>
				<p>
					<%= label_tag(:name, "Name") %>
					<%= text_field_tag(:name, params[:name]) %>
				</p>
				<p>
					<%= label_tag(:email, "Email") %>
					<%= text_field_tag(:email, params[:email]) %>
				</p>
				<p>
					<%= label_tag(:body, "Message") %>
					<%= text_area_tag(:body) %>
				</p>
				<input name="commit" type="submit" value="Send" class="button expand radius">
				<% end %>
		</div>
	</div>
</div>
