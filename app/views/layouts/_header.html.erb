                <%= link_to '#' do %>
                  <i class="fa fa-cogs"></i>
                  Settings
                <% end %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to signout_path, method: 'delete' do %>
                  <i class="fa fa-sign-out"></i>
                  Sign out
