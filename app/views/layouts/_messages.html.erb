<div class="small-12 medium-12 large-12 columns">
<% flash.each do |name, msg| %>
	<% if msg.is_a?(String) %>
		<div data-alert class="alert-box radius <%= name.to_s == 'notice' ? 'success' : 'info' %>">
			<%= content_tag :div, msg %>
			<a href="#" class="close">&times;</a>
		</div>
	<% end %>
<% end %>
</div>